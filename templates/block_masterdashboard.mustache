{{!
    @template block_masterdashboard/block_masterdashboard
    This template renders categorized course cards (overdue, inprogress, completed).

    Context variables:
    - overdue: array of courses with fields name, url, duedate, image
    - inprogress: array of courses with fields name, url, enddate, image
    - completed: array of courses with fields name, url, completiondate, image
    - introtext: optional welcome text

    Example content:
    {
        "introtext": "Willkommen auf deinem Dashboard.",
        "overdue": {
            "courses": [
                {
                    "name": "Mathematik",
                    "url": "https://moodle.local/course/view.php?id=1",
                    "duedate": "Montag, 01. Juli 2024",
                    "image": "https://moodle.local/pluginfile.php/123/course/overviewfiles/image.jpg"
                }
            ]
        },
        "inprogress": {
            "courses": [
                {
                    "name": "Biologie",
                    "url": "https://moodle.local/course/view.php?id=2",
                    "enddate": "Freitag, 12. Juli 2024",
                    "image": "https://moodle.local/pluginfile.php/456/course/overviewfiles/image2.jpg"
                }
            ]
        },
        "completed": {
            "courses": [
                {
                    "name": "Deutsch",
                    "url": "https://moodle.local/course/view.php?id=3",
                    "completiondate": "Dienstag, 11. Juni 2024",
                    "image": "https://moodle.local/pluginfile.php/789/course/overviewfiles/image3.jpg"
                }
            ]
        }
    }
}}
<!-- File: templates/block_masterdashboard.mustache -->
<div class="block_masterdashboard">

    {{#introtext}}
    <div class="dashboardintro">{{{introtext}}}</div>
    {{/introtext}}

    {{#overdue}}
    <div class="section">
        <h3>Überfällige Kurse</h3>
        {{#courses}}
        <div class="course-card overdue">
            <img src="{{image}}" alt="{{name}}" class="course-thumb" />
            <div class="course-content">
                <div class="course-info">
                    <a href="{{url}}" class="course-name">{{name}}</a>
                    <div class="date">Fällig am: {{duedate}}</div>
                </div>
            </div>
        </div>
        {{/courses}}
    </div>
    {{/overdue}}

    {{#inprogress}}
    <div class="section">
        <h3>Kurse in Bearbeitung</h3>
        {{#courses}}
        <div class="course-card inprogress">
            <img src="{{image}}" alt="{{name}}" class="course-thumb" />
            <div class="course-content">
                <div class="course-info">
                    <a href="{{url}}" class="course-name">{{name}}</a>
                    <div class="date">Endet am: {{enddate}}</div>
                </div>
            </div>
        </div>
        {{/courses}}
    </div>
    {{/inprogress}}

    {{#completed}}
    <div class="section">
        <h3>Abgeschlossene Kurse</h3>
        {{#courses}}
        <div class="course-card completed">
            <img src="{{image}}" alt="{{name}}" class="course-thumb" />
            <div class="course-content">
                <div class="course-info">
                    <a href="{{url}}" class="course-name">{{name}}</a>
                    <div class="date">Abgeschlossen am: {{completiondate}}</div>
                </div>
            </div>
        </div>
        {{/courses}}
    </div>
    {{/completed}}

</div>
